/listWithdrawals:
  post:
    description: Generate report on withdrawal requests.
    body:
      application/json:
        properties:
          filter:
            description: Report object.
            type: ReportFilter
    responses:
      200:
        body:
          type: array
          items:
            type: object
            properties:
              time: datetime
              assetType: string
              amount : number
              account: string
              userId: string
          example:
            [
                {
                  "time": 2018-10-10 10:05:13.384,
                  "assetType": "USD",
                  "amount": 1500000,
                  "account": "BTC.com",
                  "userId": "bob"
                },
                {
                  "time": 2018-07-11 23:42:21.958,
                  "assetType": "EUR",
                  "amount": 86646000,
                  "account": "BTC.com",
                  "userId": "alice"
                }
            ]
  

