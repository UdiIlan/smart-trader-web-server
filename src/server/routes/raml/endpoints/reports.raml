
#%RAML 1.0
---

description: Smart-Trader reports APIs

/listTrades:
  post:
    description: Generate report on tarde requests.
    body:
      application/json:
        properties:
          filter:
            description: Report object.
            type: ReportFilter
    responses:
      200:
        body:
          type: array
          items:
            type: OrderStatus
          example:
            [
                {
                  "account": "BTC.com",
                  "startTime": 2018-10-10 10:05:13.384,
                  "elapsedTimeMinutes": 15.42,
                  "assetPair": "BTC-USD",
                  "status": "In-Progress",
                  "requestedSize": 1500,
                  "executionSize": 1001,
                  "executedTargetAmount": 850000,
                  "tradeOrderId": "ABC2D",
                  "walletAddress": "bc1qdp9q0lae7vz9vn4drw4e48kqkk44sccp34008s"
                },
                {
                  "account": "BTC.com",
                  "startTime": 2018-08-21 14:23:52.186,
                  "elapsedTimeMinutes": 35.24,
